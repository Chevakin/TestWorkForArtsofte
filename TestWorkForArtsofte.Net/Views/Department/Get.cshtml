@model IEnumerable<DepartmentSimpleViewModel>

<table class="table">
    <tr>
        <th>Название</th>
        <th>Этаж</th>
    </tr>
    @foreach (var department in Model)
    {
        <tr>
            <td>@department.Title</td>
            <td>@department.Floor</td>
        </tr>
    }
</table>

<a class="btn" asp-controller="Department" asp-action="Add">Добавить</a>
